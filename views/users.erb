 <div class="container">
      <div class="row">
        <!-- Latest Posts -->
        <main class="post blog-post col-lg-8"> 
          <div class="container">
          <h1> Our Users<a href="#"><i class="fa fa-bookmark-o far fa-bookmark"></i></a></h1>
<% @users.each do |user| %>
            <div class="post-single">
              <div class="post-details">
                <div class="post-meta d-flex justify-content-between">
                  <!-- <div class="category"><a href="#">Tags</a>, <a href="#">Another</a></div> -->
                </div>
                

                


                <div class="post-body">
                  
                    <div class="post-footer d-flex align-items-center flex-column flex-sm-row">
                  <a href="/" class="author d-flex align-items-center flex-wrap">
                    <div class="avatar"><img src="/img/avatar-<%=user.id%>.jpg" alt="..." class="img-fluid"></div>
                    <div class="title"><span> <%= user.name%></span></div></a>
                    <div class="title"><span>Total Posts: <%= user.posts.size%></span></div></a>
                  <div class="d-flex align-items-center flex-wrap">       
                    <div class="date"><i class="icon-clock far fa-clock"></i></div>
                    <div class="comments"><i class="icon-comment far fa-comment-alt"></i></div>
                  </div>
                  <div class="d-flex align-items-center flex-wrap">  
                    <div class="title"><a href="/user/<%= user.id%>">View profile</a></div>
                    <div class="title meta-last"> <a href="/">View all posts</a></div>     
                  </div>

                </div>  
              
             <% end %>
                </div>

              </div>
            </div>
          </div>
        </main>



